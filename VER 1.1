#include <iostream>
#include <string>


int randnum = rand() % 10 + 1;
char userinp = 'x'
;

void Action(){

    if(randnum<5){
        std::cout << "Press J to Jump\n";
        std::cin >> userinp;
        if (userinp == 'J'){
            std::cout << "\n Success\n";
            randnum +=1;
            randnum = randnum%10;
            Action();
        }
        else{
            std::cout << "\n Failure. Game over";
        }
    }
    else {
        std::cout << "Press D to duck\n";
        std::cin >> userinp;
        if (userinp == 'D'){
            std::cout << "Success! \n";
            randnum+=1;
            randnum = randnum%10;
            Action();
        }
        else {
            std::cout << "\nFail! Game over!";
        }
    }

}



int main() {




    std::cout << "Welcome to Jump and Duck!\n ";
    Action();
    return 0;
}
